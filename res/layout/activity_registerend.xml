<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bj_bule" >

    <View
        android:id="@+id/icon"
        android:layout_width="270dip"
        android:layout_height="200dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:background="@drawable/registerend_bj" />

    <LinearLayout
        android:id="@+id/whell"
        android:layout_width="fill_parent"
        android:layout_height="157dip"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <com.iss.view.wheel.WheelView
            android:id="@+id/wheel_province"
            android:layout_width="0dip"
            android:layout_height="157dip"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1" />

        <com.iss.view.wheel.WheelView
            android:id="@+id/wheel_city"
            android:layout_width="0dip"
            android:layout_height="157dip"
            android:layout_marginLeft="0.5dip"
            android:layout_weight="1" />
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whell"
        android:layout_marginTop="20dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/but_back"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_register_start_back_string" />

        <TextView
            android:id="@+id/registerEnd_ok"
            style="@style/text_style"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/but_back"
            android:background="@drawable/criclebut_bg"
            android:text="@string/_but_text1" />
    </LinearLayout>

</RelativeLayout>